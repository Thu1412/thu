@model SachOnline.Models.DONDATHANG

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÔNG TIN ĐƠN ĐẶT HÀNG</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Đã Thanh Toán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DaThanhToan)
        </dd>

        <dt>
            Tình Trạng Giao Hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TinhTrangGiaoHang)
        </dd>

        <dt>
            Ngày Đặt
        </dt>

        <dd>
            @Html.FormatValue(@Model.NgayDat, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Ngày Giao
        </dt>

        <dd>
            @Html.FormatValue(@Model.NgayGiao, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Mã Khách Hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaKH)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("SỬa", "Edit", new { id = Model.MaDonHang }) |
    @Html.ActionLink("VỀ TRANG THÔNG TIN ĐƠN ĐẶT HÀNG", "Index")
</p>
